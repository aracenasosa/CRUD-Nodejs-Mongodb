<% include partials/header %>

<div class="container">
    <div class="row">
        <!--Form-->
        <div class="col-md-5">
            <div class="card">
                <div class="card-header bg-dark">
                    <span class="text-light m-auto" style="font-size: 40px">Create <i
                            class="fas fa-user-plus"></i></span>
                </div>
                <div class="card-body">
                    <form action="/add" method="POST">
                        <div class="form-group">
                            <input type="text" name="title" class="form-control" placeholder="Insert a Title">
                        </div>
                        <div class="form-group">
                            <textarea name="description" class="form-control" placeholder="Insert a Description"
                                cols="30" rows="10"></textarea>
                        </div>
                        <div class="form-group">
                            <select name="type" class="form-control">
                                <option value="Job">Job</option>
                                <option value="Hobbie">Hobbie</option>
                                <option value="Work">Work</option>
                                <option value="Homework">Homework</option>
                            </select>
                        </div>
                        <button class="btn btn-primary btn-block">Add</button>
                    </form>
                </div>
            </div>
        </div>
        <!--List-->
        <div class="col-md-7">
            <table class="table table-bordered table-hover">
                <thead>
                    <th>NÂ°</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Type</th>
                    <th>Operation</th>
                </thead>
                <tbody>
                    <% for(let i = 0; i < tasks.length; i++) { %>
                    <tr>
                        <td><%= i + 1%></td>
                        <td><strong><%= tasks[i].title %></strong></td>
                        <td><%= tasks[i].description %></td>
                        <td><%= tasks[i].type %></td>
                        <td>
                            <a class="<%= tasks[i].status ? 'btn btn-success' : 'btn btn-dark'%>"
                                href="/turn/<%= tasks[i]._id %>">Done <i class="fas fa-list-alt"></i></a>
                            <a href="/delete/<%= tasks[i]._id %>" class="btn btn-danger my-2">
                                Delete <i class="fas fa-trash-alt"></i>
                            </a>
                            <a href="/edit/<%= tasks[i]._id %>" class="btn btn-warning my-2">
                                Edit <i class="fas fa-edit"></i>
                            </a>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<% include partials/footer %>